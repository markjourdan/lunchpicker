@using Kendo.Mvc.UI
@model dynamic

<h2>Manage</h2>
<ul>
    <li>@Html.Kendo().Button().Name("ManageStates").Content("States").Events(e => e.Click("manageStates"))</li>
    <li>@Html.Kendo().Button().Name("ManageUsers").Content("Users").Events(e => e.Click("manageUsers"))</li>
    <li>@Html.Kendo().Button().Name("ManageCliques").Content("Clique's").Events(e => e.Click("manageCliques"))</li>
</ul>
<script type="text/javascript">
    function manageStates() {
        window.location = '@Url.Action("Manage", "State", new { Area = "CrunchAdmin" })';
    }

    function manageUsers() {
        window.location = '@Url.Action("Manage", "Users", new { Area = "CrunchAdmin" })';
    }
    function manageCliques() {
        window.location = '@Url.Action("Manage", "Cliques", new { Area = "CrunchAdmin" })';
    }
</script>
<style type="text/css">
    li {
        list-style: none;
    }
</style>