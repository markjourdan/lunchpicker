@using LunchPicker.Web.Models.Account
@model AccountModel

@(Html.Kendo().PanelBar()
    .Name("PasswordTab")
    .ExpandMode(PanelBarExpandMode.Single)
    .Items(items =>
        {
            items.Add().Text("change password")
                .Selected(ViewBag.HasLocalPassword)
                .Expanded(ViewBag.HasLocalPassword)
                .Visible(ViewBag.HasLocalPassword)
                .Content(@Html.Partial("Partial/ChangePassword", Model).ToHtmlString());
            items.Add().Text("set password")
                .Selected(!ViewBag.HasLocalPassword)
                .Expanded(!ViewBag.HasLocalPassword)
                .Visible(!ViewBag.HasLocalPassword)
                .Content(@Html.Partial("Partial/SetPassword", new LocalPasswordModel()).ToHtmlString());
        }
    )
)