@model LunchPicker.Web.Models.Account.RegisterModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Create a new account.</h2>
</hgroup>

@{ Html.BeginForm(); }

    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <fieldset>
        <legend>Registration Form</legend>
        <div class="account-register">
            <ul>
                <li>
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class="k-textbox"})
                </li>
                <li>
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName, new { @class="k-textbox"})
                </li>
                <li>
                    @Html.LabelFor(m => m.LastName)
                    @Html.TextBoxFor(m => m.LastName, new { @class="k-textbox"})
                </li>
                <li>
                    @Html.LabelFor(m => m.EmailAddress)
                    @Html.TextBoxFor(m => m.EmailAddress, new { @class="k-textbox"})
                </li>
                <li>
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class="k-textbox"})
                </li>
                <li>
                    @Html.LabelFor(m => m.ConfirmPassword)
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class="k-textbox"})
                </li>
                <li>
                    @Html.LabelFor(m => m.CliqueKey)
                    @Html.TextBoxFor(m => m.CliqueKey, new { @class="k-textbox"})
                </li>
            </ul>
        </div>
        <input type="submit" value="Register" class="k-button" />
    </fieldset>
@{Html.EndForm(); }

<style type="text/css">
    .account-register ul {
        list-style: none;
        margin: 10px 0;
        padding: 0;
    }
    .account-register li {
         margin: 10px;
    }
    .account-register label
    {
	    display:block;
	    float:left;
	    width:250px;
    }
</style>